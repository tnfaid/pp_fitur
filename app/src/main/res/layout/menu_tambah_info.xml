<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/detail_rounded"
            android:layout_margin="15dp">
            <RelativeLayout
                android:id="@id/recycler_view1"
                android:layout_width="match_parent"
                android:background="@drawable/detail_rounded"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/green_rounded_top">

                    <ImageView
                        android:id="@+id/icon_daun"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/icon_daun" />

                    <TextView
                        android:id="@+id/text_jenis"
                        android:layout_toRightOf="@id/icon_daun"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:text="Nama Penyakit"
                        android:textSize="15dp"
                        android:gravity="center|left"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>

                <View
                    android:id="@+id/recycler_view1"
                    android:layout_below="@id/header1"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <RelativeLayout
                    android:id="@+id/footer1"
                    android:layout_below="@id/recycler_view1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:background="@drawable/white_rounded_bottom">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tv_nama_penyakit"
                        android:layout_width="372dp"
                        android:layout_height="55dp"
                        android:textSize="12dp"
                        android:text="Nama Penyakit daun" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_below="@id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="300dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:id="@id/recycler_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/green_rounded_top">

                    <ImageView
                        android:id="@+id/icon_tulis"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:layout_marginTop="5dp"
                        android:foregroundGravity="bottom"
                        android:src="@drawable/icon_tulis" />

                    <TextView
                        android:id="@+id/text_kondisi"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="-2dp"
                        android:layout_toRightOf="@id/icon_tulis"
                        android:gravity="center|left"
                        android:text="Kondisi"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/recycler_view2"
                    android:layout_below="@id/header2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <RelativeLayout
                    android:id="@+id/footer2"
                    android:layout_below="@id/recycler_view2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    android:background="@drawable/white_rounded_bottom">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_kondisi_"
                        android:layout_width="372dp"
                        android:layout_height="127dp"
                        android:textSize="12dp"
                        android:text="Daun Kekuningan" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_below="@id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="300dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:id="@id/recycler_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/green_rounded_top">

                    <ImageView
                        android:id="@+id/icon_solusi"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:foregroundGravity="bottom"
                        android:src="@drawable/icon_lampu" />

                    <TextView
                        android:id="@+id/text_solusi"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="-2dp"
                        android:layout_toRightOf="@id/icon_solusi"
                        android:gravity="center|left"
                        android:text="Solusi"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/recycler_view3"
                    android:layout_below="@id/header3"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <RelativeLayout
                    android:id="@+id/footer3"
                    android:layout_below="@id/recycler_view3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    android:background="@drawable/white_rounded_bottom">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_solusi_"
                        android:layout_width="356dp"
                        android:layout_height="122dp"
                        android:textSize="12dp"
                        android:text="Disiram" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_below="@id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="300dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:id="@id/recycler_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header4"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/detail_rounded">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_gambar"
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_below="@+id/tv_penyakit"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="29dp"
                        android:background="@drawable/icon_camera"
                        android:foregroundGravity="center"
                        android:padding="5dp"
                        android:paddingLeft="30dp" />

                    <Button
                        android:layout_width="157dp"
                        android:layout_height="34dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="51dp"
                        android:layout_marginTop="49dp"
                        android:layout_marginEnd="54dp"
                        android:layout_marginBottom="47dp"
                        android:layout_toEndOf="@+id/iv_gambar"
                        android:background="@drawable/green_rounded_all"
                        android:text="Ambil"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="381dp"
            android:layout_height="48dp"
            android:layout_below="@id/card4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/green_rounded_all"
            android:gravity="center"
            android:text="SIMPAN"
            android:textAllCaps="false"
            android:textColor="@color/white" />



    </RelativeLayout>



</ScrollView>
